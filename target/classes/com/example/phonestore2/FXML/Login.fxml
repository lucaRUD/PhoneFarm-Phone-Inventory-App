<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #352875;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.phonestore2.Login">
   <children>
      <TextField fx:id="username" layoutX="148.0" layoutY="129.0" prefHeight="26.0" prefWidth="304.0" promptText="Username" style="-fx-background-color: #533ebd;">
         <font>
            <Font size="15.0" />
         </font></TextField>
      <PasswordField fx:id="password" layoutX="148.0" layoutY="180.0" prefHeight="26.0" prefWidth="304.0" promptText="Password" style="-fx-background-color: #533ebd;">
         <font>
            <Font size="15.0" />
         </font></PasswordField>
      <Button fx:id="signUpbtn" layoutX="513.0" layoutY="14.0" mnemonicParsing="false" onAction="#signUp" style="-fx-background-color: #533ebd;" text="Sign Up" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <ImageView fx:id="progress" fitHeight="80.0" fitWidth="160.0" layoutX="239.0" layoutY="318.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../progress.gif" />
         </image>
      </ImageView>
      <JFXButton fx:id="signInbtn" layoutX="266.0" layoutY="236.0" onAction="#loginAction" prefHeight="30.0" prefWidth="68.0" style="-fx-background-color: #533ebd;" text="Sign In" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></JFXButton>
      <Hyperlink fx:id="admin_link" layoutX="218.0" layoutY="294.0" onAction="#signInAdmin" text="Are you an admin?Click Here." textFill="#0080a4" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="246.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../logophonefarm.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
